<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="480.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainScreenController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="480.0" prefWidth="500.0">
         <children>
            <Label alignment="TOP_LEFT" text="Main Menu">
               <font>
                  <Font size="30.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Label text="Please choose an option below:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <VBox alignment="TOP_CENTER" prefWidth="480.0" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#appointmentsButton" prefHeight="45.0" prefWidth="150.0" text="Appointments" />
                  <Button mnemonicParsing="false" onAction="#customersButton" prefHeight="45.0" prefWidth="150.0" text="Customers" />
                  <Button layoutX="175.0" layoutY="40.0" mnemonicParsing="false" onAction="#calendarButton" prefHeight="45.0" prefWidth="150.0" text="Calendar" />
                  <Button mnemonicParsing="false" onAction="#reportsButton" prefHeight="45.0" prefWidth="150.0" text="Reports" />
                  <Button mnemonicParsing="false" onAction="#exitButton" prefHeight="45.0" prefWidth="150.0" text="Exit" />
               </children>
               <padding>
                  <Insets top="30.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
