            </HBox>
            <HBox alignment="CENTER" layoutX="20.0" layoutY="57.0" prefHeight="35.0" prefWidth="480.0">
               <children>
                  <Label prefWidth="90.0" text="Description" />
                  <TextField fx:id="descriptionField" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="35.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="90.0" text="Location" />
