               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="20.0" layoutY="397.0" prefHeight="35.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="40.0" text="Start" />
                  <ComboBox fx:id="startCB" prefWidth="110.0">
                     <HBox.margin>
                        <Insets right="35.0" />
                     </HBox.margin>
                  </ComboBox>
                  <Label layoutX="105.0" layoutY="19.0" prefWidth="40.0" text="End">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="endCB" layoutX="195.0" layoutY="14.0" prefWidth="110.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#saveButton" prefWidth="80.0" text="Save" />
