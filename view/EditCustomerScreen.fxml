<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EditCustomerScreenController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="607.0" prefWidth="500.0">
         <children>
            <Label fx:id="customerTitle" text="Edit Customer">
               <font>
                  <Font size="30.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" top="10.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="60.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="90.0" text="Name" />
                  <TextField fx:id="nameField" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="20.0" layoutY="57.0" prefHeight="60.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="90.0" text="Address" />
                  <TextField fx:id="addressField" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="60.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="90.0" text="Address 2" />
                  <TextField fx:id="address2Field" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="20.0" layoutY="157.0" prefHeight="60.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="90.0" text="City" />
                  <TextField fx:id="cityField" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="20.0" layoutY="357.0" prefHeight="60.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="90.0" text="Country" />
                  <TextField fx:id="countryField" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="20.0" layoutY="357.0" prefHeight="60.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="90.0" text="Postal Code" />
                  <TextField fx:id="postalCodeField" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="20.0" layoutY="457.0" prefHeight="60.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="90.0" text="Phone" />
                  <TextField fx:id="phoneField" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#saveButton" prefWidth="80.0" text="Save" />
                  <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#cancelButton" prefWidth="80.0" text="Cancel" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
